{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReportsConfiguration": {
    "BasePath": "/app/reports",
    "TemporaryDirectory": "/tmp",
    "ConsolidatedSplitBatchSize": 25000,
    "ConsolidatedSplitDiskThreshold": 10000
  },
  "TemporaryFileCache": {
    "CacheDirectory": "temp_downloads",
    "ExpirationTimeMinutes": 60,
    "CleanupIntervalMinutes": 30,
    "MaxCacheSizeGB": 5,
    "EnableMD5Validation": true
  }
}