<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <add key="telerik" value="https://nuget.telerik.com/v3/index.json" />
  </packageSources>
  <packageSourceCredentials>
    <telerik>
      <add key="Username" value="api-key" />
      <!-- La clave se inyecta desde la variable de entorno TELERIK_NUGET_KEY -->
      <!-- Para desarrollo local, configurar: $env:TELERIK_NUGET_KEY="tu_clave_aqui" -->
      <add key="ClearTextPassword" value="%TELERIK_NUGET_KEY%" />
    </telerik>
  </packageSourceCredentials>
</configuration>